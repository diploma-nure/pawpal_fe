{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "sourceMap": true,
    "types": ["cypress", "node"],
    "composite": true,
    "noEmit": false
  },
  "include": [
    "cypress",
    "src/**/*.cy.ts",
    "**/*.cy.tsx",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["src/**/*.test.ts"]
}
